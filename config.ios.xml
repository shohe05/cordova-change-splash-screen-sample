<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>HelloCordova</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <splash src="./www/img/nginx320-480.png" width="320" height="480"/>
        <splash src="./www/img/nginx640-960.png" width="640" height="960"/>
        <splash src="./www/img/nginx768-1024.png" width="768" height="1024"/>
        <splash src="./www/img/nginx1536-2048.png" width="1536" height="2048"/>
        <splash src="./www/img/nginx1024-768.png" width="1024" height="768"/>
        <splash src="./www/img/nginx2048-1536.png" width="2048" height="1536"/>
        <splash src="./www/img/nginx640-1136.png" width="640" height="1136"/>
        <splash src="./www/img/nginx750-1334.png" width="750" height="1334"/>
        <splash src="./www/img/nginx1242-2208.png" width="1242" height="2208"/>
        <splash src="./www/img/nginx2208-1242.png" width="2208" height="1242"/>
    </platform>

    <platform name="android">
        <splash src="./www/img/nginx.png" density="land-hdpi"/>
        <splash src="./www/img/nginx.png" density="land-ldpi"/>
        <splash src="./www/img/nginx.png" density="land-mdpi"/>
        <splash src="./www/img/nginx.png" density="land-xhdpi"/>

        <splash src="./www/img/nginx.png" density="port-hdpi"/>
        <splash src="./www/img/nginx.png" density="port-ldpi"/>
        <splash src="./www/img/nginx.png" density="port-mdpi"/>
        <splash src="./www/img/nginx.png" density="port-xhdpi"/>
    </platform>
</widget>
